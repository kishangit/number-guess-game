<div class="center-form-div">
  <h2 class="devise-form-header">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-3">
      <%= f.label :email, class: "text-lg" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'devise-input' %>
    </div>

    <div>
      <%= f.label :first_name, class: "text-lg" %>
      <%= f.text_field :first_name, class: 'devise-input' %>
    </div>

    <div class="field mb-3">
      <%= f.label :password, class: "text-lg" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'devise-input' %>
    </div>

    <div class="field mb-3">
      <%= f.label :password_confirmation, class: "text-lg" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'devise-input' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "devise-link" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
